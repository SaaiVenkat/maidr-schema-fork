{
  "openapi": "3.0.0",
  "info": {
    "title": "MAIDR Schema API",
    "version": "1.0.0"
  },
  "paths": {
    "/maidr-metadata": {
      "get": {
        "summary": "Get multi-panel schema",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MaidrSchema"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "MaidrSchema": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "figure-id"
          },
          "library": {
            "type": "string",
            "example": "matplotlib"
          },
          "coordinate": {
            "type": "string",
            "example": "cartesian"
          },
          "layout": {
            "type": "object",
            "properties": {
              "rows": {
                "type": "integer",
                "example": 2
              },
              "columns": {
                "type": "integer",
                "example": 3
              }
            }
          },
          "title": {
            "type": "string",
            "example": "figure-title"
          },
          "subtitle": {
            "type": "string",
            "example": "R-figure-subtitle"
          },
          "caption": {
            "type": "string",
            "example": "R-figure-caption"
          },
          "panels": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "example": "panel-id"
                },
                "title": {
                  "type": "string",
                  "example": "panel-title"
                },
                "axes": {
                  "type": "object",
                  "properties": {
                    "x": {
                      "type": "array",
                      "items": {
                        "type": "string",
                        "example": "x-axis"
                      }
                    },
                    "y": {
                      "type": "array",
                      "items": {
                        "type": "string",
                        "example": "y-axis"
                      }
                    },
                    "z": {
                      "type": "array",
                      "items": {
                        "type": "string",
                        "example": "z-axis"
                      }
                    }
                  }
                },
                "legend": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "string"
                  },
                  "example": {
                    "gentoo": "red",
                    "adelie": "green"
                  }
                },
                "layers": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string",
                        "description": "Layer type, e.g., 'bar', 'line', 'scatter', etc.",
                        "enum": [
                          "bar",
                          "hist",
                          "heat",
                          "box",
                          "point",
                          "line",
                          "stacked",
                          "dodged"
                        ],
                        "example": "layer-type"
                      },
                      "selector": {
                        "type": "array",
                        "items": {
                          "type": "string",
                          "example": "selectors"
                        }
                      },
                      "data": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "x": {
                              "type": "number",
                              "example": 39.5
                            },
                            "y": {
                              "type": "number",
                              "example": 17.4
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
